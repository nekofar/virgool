{
  "name": "nekofar/virgool",
  "type": "project",
  "description": "Virgool lets you publish posts automatically to a Virgool profile.",
  "homepage": "https://github.com/nekofar/virgool",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Milad Nekofar",
      "email": "milad@nekofar.com"
    }
  ],
  "require": {
    "php": ">=7.0 || >=8.0",
    "ext-json": "*",
    "composer/installers": "v1.11.0"
  },
  "require-dev": {
    "codeception/codeception": "4.1.21",
    "dealerdirect/phpcodesniffer-composer-installer": "0.7.1",
    "friendsofphp/php-cs-fixer": "v3.0.0",
    "lucatume/wp-browser": "3.0.8",
    "phpcompatibility/phpcompatibility-wp": "2.1.2",
    "phpunit/phpunit": "8.5.18",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "3.6.0",
    "wordpress/wordpress": "5.8",
    "wp-cli/dist-archive-command": "v2.0.1",
    "wp-cli/wp-cli": "2.5.0",
    "wp-coding-standards/wpcs": "2.3.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress/wordpress",
        "type": "wordpress-core",
        "version": "5.8",
        "dist": {
          "type": "zip",
          "url": "https://github.com/WordPress/WordPress/archive/5.8.zip"
        }
      }
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "lint": "./vendor/bin/phpcs"
  }
}
